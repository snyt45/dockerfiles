let g:lsp_diagnostics_signs_warning = {'text': '💣️'}
let g:lsp_diagnostics_signs_hint = {'text': '💡'}
let g:lsp_diagnostics_signs_information = {'text': 'ℹ️'}

" Diagnosticsを有効にする
let g:lsp_diagnostics_enabled = 1
" カーソル下のエラー、警告、情報、ヒントを画面下部のコマンドラインに表示
